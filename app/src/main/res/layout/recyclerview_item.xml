<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        card_view:cardCornerRadius="20dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/meeting_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="Title"
                android:textColor="@android:color/white"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/organizer_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Organizador : "
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/meeting_title" />

            <TextView
                android:id="@+id/organizer_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="lehilima@gmail.com"
                card_view:layout_constraintBottom_toBottomOf="@+id/organizer_title"
                card_view:layout_constraintStart_toEndOf="@+id/organizer_title"
                card_view:layout_constraintTop_toTopOf="@+id/organizer_title"
                card_view:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/start_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="inicio : "
                card_view:layout_constraintEnd_toEndOf="@+id/organizer_title"
                card_view:layout_constraintStart_toStartOf="@+id/organizer_title"
                card_view:layout_constraintTop_toBottomOf="@+id/organizer_title" />

            <TextView
                android:id="@+id/start_value"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="27/01 14:00"
                card_view:layout_constraintBottom_toBottomOf="@+id/start_title"
                card_view:layout_constraintStart_toEndOf="@+id/start_title"
                card_view:layout_constraintTop_toTopOf="@+id/start_title" />

            <TextView
                android:id="@+id/end_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fim: "
                card_view:layout_constraintEnd_toEndOf="@+id/start_title"
                card_view:layout_constraintStart_toStartOf="@+id/start_title"
                card_view:layout_constraintTop_toBottomOf="@+id/start_title" />

            <TextView
                android:id="@+id/end_value"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="27/01 14:00"
                card_view:layout_constraintBottom_toBottomOf="@+id/end_title"
                card_view:layout_constraintStart_toEndOf="@+id/end_title"
                card_view:layout_constraintTop_toTopOf="@+id/end_title" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>